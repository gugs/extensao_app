<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimaryDark">#388E3C</item>
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorAccent">#009688</item>

        <!--<item name="android:windowBackground">@android:color/white</item>-->

        <!-- Altera a cor de texto da action bar de preto para branco -->
        <item name="android:textColorPrimary">#000000</item>

        <!-- Altera a cor de texto do menu suspenso da action bar para não ficar branco sobre branco -->
        <item name="android:itemTextAppearance">@android:color/black</item>

        <!--<item name="android:textColor">#000000</item>-->
    </style>

    <style name="LabelTextAppearance">
        <item name="android:textColor">#363636</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TODO: Pegar a cor default do hint do Android ao invés de utilizar um valor fixo -->
    <style name="HintTextAppearance">
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>